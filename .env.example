# AutoGen Development Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Provider API Keys (Required)
# =============================================================================

# OpenRouter API Key (REQUIRED for function calling)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_key_here

# Groq API Key (Optional - fast inference)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_key_here

# Google Gemini API Key (Optional - alternative LLM)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSy_your_key_here

# =============================================================================
# GitHub Integration (Required for GitHub MCP server)
# =============================================================================

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:org
GITHUB_TOKEN=ghp_your_token_here

# =============================================================================
# Slack Integration (Optional)
# =============================================================================

# Slack Bot Token (Optional - for Slack notifications)
# Get from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-token-here

# =============================================================================
# HuggingFace (Optional)
# =============================================================================

# HuggingFace API Token (Optional - for model downloads)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_token_here

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# Redis URL (Optional - for memory caching)
# REDIS_URL=redis://localhost:6379/0

# MongoDB URL (Optional - alternative to SQLite)
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_DATABASE=automaton_memory

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Server Port
PORT=8000
