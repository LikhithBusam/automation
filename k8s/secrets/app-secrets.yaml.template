apiVersion: v1
kind: Secret
metadata:
  name: automaton-app-secrets
  namespace: automaton-production
  labels:
    app: automaton
    component: app
    app.kubernetes.io/name: automaton
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # API Keys (replace with actual values)
  OPENROUTER_API_KEY: "your-openrouter-api-key-here"
  GROQ_API_KEY: "your-groq-api-key-here"
  GOOGLE_API_KEY: "your-google-api-key-here"
  GITHUB_TOKEN: "your-github-token-here"
  SLACK_BOT_TOKEN: "your-slack-token-here"
  HF_API_TOKEN: "your-huggingface-token-here"
  
  # Database credentials
  POSTGRES_USER: "automaton_user"
  POSTGRES_PASSWORD: "CHANGE_ME_SECURE_PASSWORD"
  POSTGRES_DB: "automaton"
  
  # Redis credentials
  REDIS_PASSWORD: "CHANGE_ME_SECURE_PASSWORD"
  
  # JWT Secret
  JWT_SECRET_KEY: "CHANGE_ME_GENERATE_SECURE_RANDOM_KEY"
  
  # Grafana credentials
  GRAFANA_USER: "admin"
  GRAFANA_PASSWORD: "CHANGE_ME_SECURE_PASSWORD"

