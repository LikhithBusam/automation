{
  "dashboard": {
    "title": "Business KPIs",
    "tags": ["business", "kpi"],
    "panels": [
      {
        "id": 1,
        "title": "Workflow Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "automaton_business_workflow_success_rate",
            "legendFormat": "{{workflow_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "automaton_business_active_users{time_period=\"24h\"}",
            "legendFormat": "24h Active Users"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Total Workflows Executed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(automaton_workflow_executions_total)",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "API Cost",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(automaton_business_api_cost_total[1h])",
            "legendFormat": "{{provider}}/{{model}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Storage Cost",
        "type": "stat",
        "targets": [
          {
            "expr": "automaton_business_storage_cost",
            "legendFormat": "Current Cost"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Average Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "automaton_business_avg_response_time_seconds",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      }
    ],
    "refresh": "1m",
    "schemaVersion": 27,
    "version": 1
  }
}

