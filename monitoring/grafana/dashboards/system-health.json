{
  "dashboard": {
    "title": "System Health Overview",
    "tags": ["system", "health"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "automaton_system_cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "automaton_system_memory_usage_bytes",
            "legendFormat": "Memory Used"
          },
          {
            "expr": "automaton_system_memory_available_bytes",
            "legendFormat": "Memory Available"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Disk Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "automaton_system_disk_usage_bytes",
            "legendFormat": "{{mountpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(automaton_system_network_bytes_sent_total[5m])",
            "legendFormat": "{{interface}} Sent"
          },
          {
            "expr": "rate(automaton_system_network_bytes_recv_total[5m])",
            "legendFormat": "{{interface}} Received"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"automaton-app\"}",
            "legendFormat": "App Status"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Active Workflows",
        "type": "stat",
        "targets": [
          {
            "expr": "automaton_active_workflows",
            "legendFormat": "Active"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

